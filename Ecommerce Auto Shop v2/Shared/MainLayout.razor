@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="column-layout master-view-container">
    <div class="row-layout group">
        <img src="assets/AutoShop_Logo.png" @onclick="@(e => Navigate(""))" class="image" />
        <div class="row-layout group_1">
            <IgbButton Variant="ButtonVariant.Flat" @onclick="@(e => Navigate("all-products"))" class="button" master-view-scope>
                Auto Body Parts
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" class="button" master-view-scope>
                Lighting
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" class="button" master-view-scope>
                Engine &amp; Drivetrain
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" class="button" master-view-scope>
                Brakes &amp; Suspension
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" class="button" master-view-scope>
                Engine &amp; Drivetrain
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" class="button" master-view-scope>
                Interior
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" class="button" master-view-scope>
                Exterior
                <IgbRipple></IgbRipple>
            </IgbButton>
        </div>
        <div class="row-layout group_2">
            <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button" master-view-scope>
                <span class="material-icons">
                    search
                </span>
                <IgbRipple></IgbRipple>
            </IgbIconButton>
            <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button" master-view-scope>
                <span class="material-icons">
                    account_circle
                </span>
                <IgbRipple></IgbRipple>
            </IgbIconButton>
            <IgbIconButton Variant="IconButtonVariant.Flat" @onclick="@(e => Navigate("shopping-cart"))" class="icon-button" master-view-scope>
                <span class="material-icons">
                    shopping_cart
                </span>
                <IgbRipple></IgbRipple>
            </IgbIconButton>
        </div>
    </div>
    <div class="view-container">
        @Body
    </div>
</div>

@code {
    private void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
